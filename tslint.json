{
    "defaultSeverity": "error",
    "extends": [
        "tslint-microsoft-contrib",
        "tslint:latest",
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-no-math-random"
    ],
    "jsRules": {},
    "rules": {
        "brace-style": [ true, "stroustrup" ],
        "completed-docs": [ true, {
            "classes": true,
            "functions": {"visibilities": ["exported"]},
            "variables": {"visibilities": ["exported"]},
            "methods": true,
            "properties": true,
            "interfaces": true,
            "enums": true,
            "types": true
        }],
        "export-name": false, // until they require regex matching so game-settings.ts -> ChessGameSettings is allowed
        "max-func-body-length": false,
        "missing-jsdoc": false, // on every file is tedious
        "new-parens": true,
        "no-any": true, // any is dangerous for true type saftey
        "no-bitwise": true,
        "no-backbone-get-set-outside-model": false, // too many false positives for any method names set/get
        "no-constant-condition": [ true, { "checkLoops": false } ],
        "no-duplicate-case": true,
        "no-duplicate-imports": false, // for verbosity in games
        "no-ex-assign": true,
        "no-floating-promises": false, // there are times when we want promises to execute truely asyncronously
        "no-function-expression": false, // traditional functions have benefits at times
        "no-increment-decrement": false, // no support to allow in for i loops (yet)
        "no-parameter-reassignment": false, // desireable, but disabled while invalidate allows for parameter reassign
        "no-suspicious-comment": false, // SUPER annoying
        "no-unnecessary-type-assertion": true,
        "no-unnecessary-local-variable": false,
        "no-unnecessary-override": false, // triggers on all SecondaryWinConditions, we don't want that marked
        "no-unused-variable": false, // https://github.com/palantir/tslint/issues/2649
        "number-literal-format": false, // looks worse in games with many numeric values described with floats
        "prefer-array-literal": false, // has some issues, incorrect error on Array<string | number>
        "prefer-type-cast": false, // as same issues as above
        "promise-function-async": false, // false positives on wrapping callbacks
        "strict-boolean-expressions": false, // dumb, js devs should understand truthy-ness

        "ter-no-sparse-arrays": true,
        "no-extra-boolean-cast": true,
        "no-extra-semi": true,
        "no-math-random": true,
        "no-empty-interface": false,
        // "no-implicit-dependencies": [true, "dev", "optional"],
        "no-implicit-dependencies": false, // Only till they fix the tsconfig path error
        "no-inner-declarations": [ true, "both" ],
        "no-invalid-regexp": true,
        "no-multi-spaces": true,
        "no-redundant-jsdoc": true,
        "no-relative-imports": false,
        "no-reserved-keywords": false, // the property name `type` is so common this rule becomes a pain
        "no-single-line-block-comment": false, // to allow jsdoc single line block comments, e.g. /** doc string */
        "import-spacing": true,
        // "no-parameter-reassignment": true,
        "no-submodule-imports": false, // silly rule
        "no-unused-expression": [true, "allow-new"],
        "no-void-expression": [true, "ignore-arrow-function-shorthand"],
        "object-literal-sort-keys": false,
        "one-line": [true, "check-open-brace", "check-whitespace"],
        "space-in-parens": [true, "never"],
        "ter-prefer-arrow-callback": [true],
        "ter-func-call-spacing": [true],
        "ter-indent": [true, 4, {
            "SwitchCase": 1
        }],
        "ter-no-irregular-whitespace": [true],
        "trailing-comma": [ true, {
            "multiline": "always",
            "singleline": "never",
            "esSpecCompliant": true
        }],
        "typedef": [ true,
            "call-signature",
            "parameter",
            "property-declaration"
        ],
        "switch-default": false, // it can make sense for case: returns
        "valid-jsdoc": [true, {
            "prefer": {
              "return": "returns"
            },
            "requireReturn": false,
            "requireReturnType": false,
            "requireParamDescription": true,
            "requireReturnDescription": true,
            "requireParamType": false,
            "matchDescription": ".+|(@inheritdoc)"
        }],
        "valid-typeof": true
    },
    "rulesDirectory": [],
        "exclude": [
          "**/games/**"
        ]
}
