{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-no-math-random"
    ],
    "jsRules": {},
    "rules": {
        "brace-style": [ true, "stroustrup" ],
        "completed-docs": [true, {
            "classes": true,
            "functions": {"visibilities": ["exported"]},
            "variables": {"visibilities": ["exported"]},
            "methods": true,
            "properties": true,
            "interfaces": true,
            "enums": true,
            "types": true
        }],
        "new-parens": true,
        "no-bitwise": true,
        "no-constant-condition": [true, { "checkLoops": false }],
        "no-duplicate-case": true,
        "no-ex-assign": true,
        "no-unnecessary-type-assertion": true,
        "ter-no-sparse-arrays": [true],
        "no-extra-boolean-cast": true,
        "no-extra-semi": true,
        "no-math-random": true,
        "no-empty-interface": false,
        // "no-implicit-dependencies": [true, "dev", "optional"],
        "no-implicit-dependencies": false, // Only till they fix the tsconfig path error
        "no-inner-declarations": [ true, "both" ],
        "no-invalid-regexp": true,
        "no-multi-spaces": true,
        "no-redundant-jsdoc": true,
        "import-spacing": true,
        // "no-parameter-reassignment": true,
        "no-unused-expression": [true, "allow-new"],
        "object-literal-sort-keys": false,
        "one-line": [true, "check-open-brace", "check-whitespace"],
        "space-in-parens": [true, "never"],
        "ter-prefer-arrow-callback": [true],
        "ter-func-call-spacing": [true],
        "ter-indent": [true, 4, {
            "SwitchCase": 1
        }],
        "ter-no-irregular-whitespace": [true],
        "typedef": [ true,
            "call-signature",
            "parameter",
            "property-declaration"
        ],
        "valid-jsdoc": [true, {
            "prefer": {
              "return": "returns"
            },
            "requireReturn": false,
            "requireReturnType": false,
            "requireParamDescription": true,
            "requireReturnDescription": true,
            "requireParamType": false,
            "matchDescription": ".+|(@inheritdoc)"
        }],
        "valid-typeof": true
    },
    "rulesDirectory": []
}
