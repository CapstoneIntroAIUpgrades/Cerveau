  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "watch:all": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "watch:build": "tsc --watch --pretty",
    "watch:server": "nodemon --delay 10000 npm run app",
    "build": "tsc --pretty",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "apidoc": "apidoc -i ./website/ -o ./api-docs",
    "test": "npm run lint && npm run build",
    "check-updates": "npm-check-updates -u",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "fix": "tslint --config tslint.json --project tsconfig.json --fix --force",
    "precommit": "npm test",
    "postmerge": "npm install",
    "postrewrite": "npm install"
